@using ViewModel;
@model UserViewModel;

@{
    Layout = "_Layout";
    List<UserViewModel> users = ViewData["Users"] as List<UserViewModel>;
}
@section SidebarSection{
}
 <form asp-action="AddRoleToUser" asp-controller="Account" method="post">
<table class="table w-75">
    <thead class="thead-dark">
        <tr>
            
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">National Id</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
         
        @foreach (var item in users)
        {
            <tr>
                <th scope="row" >@item.FirstName @item.LastName</th>
                <th scope="row" asp-formaction=""> @item.Email</th>
                <th scope="row">@item.NationalID</th>

                <td>
                       <input asp-for="Email" value="@item.Email" hidden>
                        <input asp-for="Role">
                    </td>
            </tr>
        }    
    </tbody>

</table>
    <button type="submit">Submit</button>
</form>
                   

