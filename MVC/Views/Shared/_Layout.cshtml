


<html>
<head>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">E-Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="index" asp-controller="home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="getall" asp-controller="product" >Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="contactus" asp-controller="home">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " asp-action="aboutus" asp-controller="home" >About Us</a>
                    </li>
                    @if (User.Identity.Name == null)
                    {

                        <li class="nav-item">
                            <a class="btn btn-primary me-2" asp-controller="Account" asp-action="SignIn">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Signup">Sign Up</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span>Welcome @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="SignOut">Sign Out</a>
                        </li>

                    }
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="button" asp-action="search" asp-controller="product">Search</button>

                </form>
          </div>
        </div>
    </nav>
    <!-- overlay -->
    

    <!-- sidebar -->
   
     <div class="row">
        <div class="col-3 bg-black text-white p-3   vh-100">
            @RenderSection("SidebarSection")
        </div>

        <main class="p-4 col-9">
            @RenderBody()
        </main>
     </div>


    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>