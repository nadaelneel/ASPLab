@using Models
@{
    Product pro = ViewData["Product"] as Product;
}
@section SidebarSection{
    <ul class="list-group list-group-item-dark">
        <li class="list-group-item active"><a href="Product/GeAll"> All Products</a></li>
        <li class="list-group-item"><i class="fa fa-paypal"></i>Salles</li>
        <li class="list-group-item"> <i class="fa fa-cart-shopping"></i>Purchases</li>
    </ul>
}

<div class="row">
     
    <div class="col-5 me-2">
        <h1>@pro.Name</h1>
        <p>@pro.Description</p>
        </div>
    <div class="col-6">
        @foreach (var item in pro.ProductAttachments)
            {
                <div class="carousel-item">
                    <img src="/Images/@item.Image" class="d-block w-100" alt="...">
                </div>
            }

    </div>



</div>